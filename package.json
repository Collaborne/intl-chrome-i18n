{
  "name": "intl-chrome-i18n",
  "version": "1.2.4",
  "description": "Provides internationalization functionalities based on Chrome.i18n, and formats the localized message strings with number, date, plural, and select placeholders.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "tslint -c tslint.json \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "TS_NODE_FILES=true node ${_NODE_ARGS} node_modules/.bin/_mocha --recursive -r ts-node/register \"test/**/*.ts\"",
    "prepublish": "npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Collaborne/intl-chrome-i18n.git"
  },
  "keywords": [
    "intl",
    "messageformat",
    "formatjs",
    "chrome-i18n",
    "i18n"
  ],
  "author": "Claudia Minardi <claudia.minardi@collaborne.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Collaborne/intl-chrome-i18n/issues"
  },
  "homepage": "https://github.com/Collaborne/intl-chrome-i18n#readme",
  "dependencies": {
    "intl-messageformat": "^2.1.0"
  },
  "devDependencies": {
    "@collaborne/tsconfig": "^0.0.2",
    "@types/node": "^10.9.4",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "chai": "^4.1.2",
    "intl": "^1.2.5",
    "intl-locales-supported": "^1.0.0",
    "mocha": "^5.2.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-config-collaborne": "^0.0.2",
    "typescript": "^3.0.3"
  }
}
